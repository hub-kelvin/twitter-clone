doctype html
html(lang='en')
  head 
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='twitter written in node js')
    meta(name='author', content='Kelvin Jose')
    
    title Power Twitter 
    
    link(href='/css/bootstrap/bootstrap.min.css', rel='stylesheet')
    link(href='/css/font-awesome.min.css', rel="stylesheet")
    link(href='/css/tokenfield.css', rel="stylesheet")
    link(href='/css/style.css', rel='stylesheet')
    // Favicon
    link(rel='shortcut icon', href='/img/bird.png')
    script(type='text/javascript', src='/js/jquery.min.js')
    script(type='text/javascript', src='/js/typeahead.min.js')
    script(type='text/javascript', src='/js/tokenfield.min.js')
    script(type='text/javascript', src='/js/app.js')
    // Bootstrap depedency
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js')
    script(type='text/javascript', src='/js/bootstrap/bootstrap.min.js')
  body.login-screen       
  header.navbar(role='banner')
    .container
      block main
      block content
        .navbar__group.navbar__group_left
          ul.navbar__main-navigation
            li
              a(href="/admin/" title="Home")
                i(class="fa fa-home", aria-hidden="true")
                span Home
            |
            li
              a(href="/admin/verification" title="Home")
                i(class="fa fa-home", aria-hidden="true")
                span Verifications
    span.navbar__logo
        a(href='/admin/')
          img(src='/img/bird.svg')
    .navbar__group.navbar__group_right
      a(href="/logout", title="logout", class="navbar__profile-logout")
          i(class="fa fa-sign-out", aria-hidden="true")
          img(class='tweet__image chat-image logout-image', src="/img/egg.jpg")
          span Logout  
    .container
      .row
        .col-sm
        .col-sm
          .container
          .profile   
            h3 #[i(class="fa fa-fire")] Trending Now 
            each trend in trendingWhat
                h7.trending-h &nbsp# #{trend.keyword}: #{trend.count} 
        .col-sm   
      .container
      .container
      .container
      .row#profile-page
          .col-lg-4   
          .profile  
            img(class="profile__image", src="/img/daily.svg")
            h4 Daily Report 
                h6 Tweets : #{dailyTweetCount}
                h6 Users : #{dailyUsersCount}
      .row#profile-page
          .col-lg-4   
          .profile  
            img(class="profile__image", src="/img/monthly.svg")
            h4 Monthly Report   
                h6 Tweets : #{monthlyTweetCount}
                h6 Users : #{monthlyUsersCount}
      .row#profile-page
          .col-lg-4   
          .profile  
            img(class="profile__image", src="/img/yearly.svg")
            h4 Yearly Report
                h6 Tweets : #{yearlyTweetCount}
                h6 Users : #{yearlyUsersCount}
      
        
      